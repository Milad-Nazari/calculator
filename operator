def global_input():
    global equal
    global calc
    global cotx
    global coty
    global x 
    global num1
    global num2

def show():
    print("equal= ",equal)
    print("calc= ",calc)
    print("counterx= ",cotx)
    print("countery= ",coty)
    print("x= ",x)
    print("num1= ",num1)
    print("num2= ",num2)

def zarb():
